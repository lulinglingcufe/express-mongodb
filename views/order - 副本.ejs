			<td>&nbsp;&nbsp;&nbsp;&nbsp;  <%= item.recevierName %> &nbsp;&nbsp;&nbsp;&nbsp;  </td>
			<td><%= item.recevierPhone %> &nbsp;&nbsp;&nbsp;&nbsp; </td>
			<td><%= item.recevierAddress %> &nbsp;&nbsp;&nbsp;&nbsp; </td>
          </tr>
          <% }); %>	 
	 
	 </table>
	  
