			<th>&nbsp;&nbsp;&nbsp;&nbsp; 收件人&nbsp;&nbsp;&nbsp;&nbsp; </th>
			<th>收件人联系方式</th>
			<th>地址</th>		
          </tr>

          <% items.forEach(function(item){ %>
          <tr>
            <td><%= item.itemname %></td>
            <td>&nbsp;&nbsp;&nbsp;&nbsp; <%= item.prize %> &nbsp;&nbsp;&nbsp;&nbsp; </td>
            <td>&nbsp;&nbsp;&nbsp;&nbsp; <%= item.point_type %> &nbsp;&nbsp;&nbsp;&nbsp; </td>
            <td>&nbsp;&nbsp;&nbsp;&nbsp; <%= item.is_send %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
