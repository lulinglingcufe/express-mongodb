						case "A" :
							a = a - amount;
							$("#a").text(a);
							break;
					    case "B" :
							b = b - amount;
							$("#b").text(b);
							break;
						case "C" :
							c = c - amount;
							$("#c").text(c);
							break;
						default:
							break;
						}
					}
			})
		})
		
		
		
